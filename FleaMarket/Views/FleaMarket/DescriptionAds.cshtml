@model FleaMarket.Models.Ad

<meta http-equiv="Content-Type" content="text/html; charset=windows-1251">
<meta name="copyright" content="Все права принадлежат Дорожко Александру Юрьевичу. Использование любых материалов возможно только с разрешения автора и при указании источника">
<meta name="author" content="Дорожко Александр">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="keywords" content="отличная барахолка, барахолка, барахолка Минск, барахолка Беларусь, сайт по продаже бу, продам в минске, продажа бвывшего в употреблений, отличная барахолка, барахолочка, ждановичи барахолка, просто барахолка, дешево купить, дешево продать">
<meta name="description" content="Описание объявления.">


@{
    ViewBag.Title = "Детальное описание объявления";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/scripts/jquery.validate.min.js")  
@Styles.Render("~/scripts/lightgallery/skins/default/style.css") 



<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>


 
<br>
<div class="container">
    <div class="row">
        <input type="button" value="Назад к объявлениям" onclick="@("window.location.href='" + @Url.Action("Index", "FleaMarket") + "'");" class="btn btn-default" />
        @if (ViewBag.FullAcess == true)
        {<input type="button" value="Обновить объявление" onclick="@("window.location.href='" + @Url.Action("UpdateAD", "FleaMarket", new { AdId = Model.AdId }) + "'");" class="btn btn-default" />}
        @if (ViewBag.FullAcess == true)
        {<input type="button" value="Редактировать" onclick="@("window.location.href='" + @Url.Action("EditAds", "FleaMarket", new { AdId = Model.AdId }) + "'");" class="btn btn-default" />}
        @if (ViewBag.FullAcess == true)
        {<input type="button" value="Деактивировать" onclick="@("window.location.href='" + @Url.Action("ChangeAdStat", "FleaMarket", new { AdId = Model.AdId }) + "'");" class="btn btn-default" />}
        @if (ViewBag.FullAcess == true)
        {<input type="button" value="Удалить" onclick="@("window.location.href='" + @Url.Action("DelAd", "FleaMarket", new { AdId = Model.AdId }) + "'");" class="btn btn-default" />}
               @if (ViewBag.FullAcess != true)
        {<input type="button" value="Пожаловаться" onclick="@("window.location.href='" + @Url.Action("SendComplaint", "FleaMarket", new { AdId = Model.AdId }) + "'");" class="btn btn-default" />}

    </div>
</div>



<br>
<div class="container table-bordered bg-info">
    <div class="row">
        <div class="col-lg-8 col-md-8 col-sm-8">
            <h3> @Html.DisplayFor(model => model.AdTopic) </h3>
            <p><h6><small> дата обновления @Html.DisplayFor(model => model.AdDateUpdate)</small></h6></p>
            <p><h6><small> просмотров @Html.DisplayFor(model => model.AdCountWatchngAd)</small></h6></p>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 text-left">
            <h2> @Html.DisplayFor(model => model.AdCost) руб.</h2>
            <p><h6>@Html.DisplayFor(model => model.AdLocation.AdLocationCountry) @Html.DisplayFor(model => model.AdLocation.AdLocationCity) @Html.DisplayFor(model => model.AdLocation.AdLocationArea) район</h6></p>
        </div>

    </div>
</div>




<div class="container">
    <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-4 col-xs-7">
            <table border="1">
                <tr>
                    <div class="container">
                        <div class="hovergallery">
                            <div class="row">
                                <div class="col-lg-2 col-md-2 col-sm-4 ">
                                    @if (Model.Image1 != null)
                                    {
                                        <a href="~/content/images/@Model.Image1" rel="lightgallery[pictureAD]" title="Фото1"><img src="~/content/images/@Model.Image1min" alt="" class="img-thumbnail" /></a>
                                    }
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-2 col-md-2 col-sm-4">
                                    @if (Model.Image2 != null)
                                    {
                                        <a href="~/content/images/@Model.Image2" rel="lightgallery[pictureAD]" title="Фото2"><img src="~/content/images/@Model.Image2min" alt="" class="img-thumbnail"/></a>

                                    }
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-2 col-md-2 col-sm-4 ">
                                    @if (Model.Image3 != null)
                                    {
                                        <a href="~/content/images/@Model.Image3" rel="lightgallery[pictureAD]" title="Фото3"><img src="~/content/images/@Model.Image3min" alt="" class="img-thumbnail"/></a>

                                    }
                                </div>
                            </div>
                            <div class="row">

                                <div class="col-lg-2 col-md-2 col-sm-4 ">
                                    @if (Model.Image4 != null)
                                    {
                                        <a href="~/content/images/@Model.Image4" rel="lightgallery[pictureAD]" title="Фото4"><img src="~/content/images/@Model.Image4min" alt="" class="img-thumbnail"/></a>

                                    }
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-2 col-md-2 col-sm-4 ">
                                    @if (Model.Image5 != null)
                                    {
                                        <a href="~/content/images/@Model.Image5" rel="lightgallery[pictureAD]" title="Фото5"><img src="~/content/images/@Model.Image5min" alt="" class="img-thumbnail"/></a>

                                    }
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-2 col-md-2 col-sm-4 ">
                                    @if (Model.Image6 != null)
                                    {
                                        <a href="~/content/images/@Model.Image6" rel="lightgallery[pictureAD]" title="Фото6"><img src="~/content/images/@Model.Image6min" alt="" class="img-thumbnail"/></a>

                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </tr>
            </table>

        </div>
        <div class="col-lg-9 col-md-9 col-sm-8 col-xs-12  bg-info table-bordered  ">
            <h5>
                @Html.DisplayFor(model => model.AdText)
            <br><br>
        </h5>
                  
                @Html.ActionLink("Просмотреть контакты", "DetailPhoneNumber",
                new { AdPhoneNumber = Model.AdPhoneNumber, id = Model.AdId },
                new { @class = "DetailPhone",
                       data_dialog_width = "800",
                       data_dialog_height = "auto"})<br /><br /> 
             
        </div>
    </div>
</div>



@section ImageZoom {
<script src="~/scripts/lightgallery/lightgallery.min.js" type="text/javascript"></script>
<script>lightgallery.init();</script> 
} 
@section scripts
{
    <script type="text/javascript">

        $(function () {
            $.ajaxSetup({ cache: false });
           $(".DetailPhone").click(function (e) {

                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
        }) 
 
    </script>
}
 