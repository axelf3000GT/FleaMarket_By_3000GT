@model FleaMarket.Models.AdUserdComplaint

@{
    ViewBag.Title = "SendComplaint";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h3>Укажите причину</h3>
        @Html.RadioButton("couse", "Материал не соответствует действительности", true)
        <span>Материал не соответствует действительности</span> <br />
        @Html.RadioButton("couse", "Материал порнографического характера")
        <span>Материал порнографического характера</span> <br />
        @Html.RadioButton("couse", "Материал машенического характера")
        <span>Материал машенического характера</span> 
        <hr />
        @Html.RadioButton("couse", "Другая причина")
        <span>Своя причина</span>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group"> 
            <div class="col-md-8">
                @Html.EditorFor(model => model.AdText, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AdText, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-1 col-md-12">
                <input type="button" value="Не отправлять и вернуться к объявлениям" onclick="@("window.location.href='" + @Url.Action("Index", "FleaMarket") + "'");" class="btn btn-default" />
                <input type="submit" value="Отправить жалобу" class="btn btn-default" />
            </div>
        </div>
    </div>
} 