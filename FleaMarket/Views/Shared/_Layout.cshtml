<!DOCTYPE html>
<html>
<head> 
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Барахолка</title>
    @RenderSection("metatags", false)
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @if (IsSectionDefined("ImageZoom"))
    {
        @RenderSection("ImageZoom")
    }

</head>
<body>  
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("HomePage", "FleaMarket")" class="elements">  <img src="~/content/sitelogo.png" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" >
                     
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Барахолка
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                             <li><a href="/FleaMarket/TitelPage"> Главная</a></li> 
                             <li><a href="/FleaMarket/Index"> Все объявления</a></li> 
                             <li><a href="/FleaMarket/MyAds"> Мои объявления</a></li> 
                             <li><a href="/FleaMarket/AddNewAdsSelectCity"> Добавить объявление</a></li> 
                        </ul>
                        
                    </li>
                 
                    <li><a href="/News/Index"> Новости</a></li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>

    </div>
    <div class="container body-content">
        @RenderBody()
        <div class="container"><hr /></div> 
        <footer>
            <p><a href="/FleaMarket/TitelPage">&copy; @DateTime.Now.Year - Барахолка </a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)  
     
</body>
</html>




